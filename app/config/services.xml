<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="security.xml"/>
        <import resource="listeners.xml"/>
        <import resource="forms.xml"/>
    </imports>

    <services>
        <!-- Menus -->
        <service id="app.menu.getter" class="AppBundle\Service\GetterAuthorizations">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="app.transform.authorization" />
        </service>

        <service id="app.menu.builder" class="AppBundle\Service\BuilderMenuItems" />
    </services>
</container>
