<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.authorization" class="AppBundle\Service\Authorization" />

        <service id="app.password" class="AppBundle\Service\Password">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="webhome.validator" />
        </service>

        <service id="app.transform.authorization" class="AppBundle\Service\Transformer\AuthorizationTransformer" />

        <service id="app.transform.user" class="AppBundle\Service\Transformer\UserTransformer">
            <argument type="service" id="app.transform.authorization" />
        </service>

        <!-- Menus -->
        <service id="app.menu.getter" class="AppBundle\Service\GetterAuthorizations">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="app.transform.authorization" />
        </service>

        <service id="app.menu.builder" class="AppBundle\Service\BuilderMenuItems" />

        <!-- Forms -->
        <service id="app.form.type.login" class="OAuthBundle\Form\Type\LoginType">
            <tag name="form.type" alias="login" />
        </service>

        <service id="app.form.type.group" class="AppBundle\Form\Type\GroupType">
            <tag name="form.type" alias="group" />
        </service>

        <!-- Listeners -->
        <service id="app.listener.locale" class="AppBundle\EventListener\LocaleListener">
            <argument>%locale%</argument>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="app.listener.user_locale" class="AppBundle\EventListener\UserLocaleListener">
            <argument type="service" id="session"/>
            <tag name="kernel.event_listener" event="security.interactive_login" method="onInteractiveLogin" />
        </service>
    </services>
</container>
