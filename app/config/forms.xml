<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.form.type.login" class="OAuthBundle\Form\Type\LoginType">
            <tag name="form.type" alias="login" />
        </service>

        <service id="app.form.type.group" class="AppBundle\Form\Type\GroupType">
            <tag name="form.type" alias="app_group" />
        </service>

        <service id="app.form.type.user" class="AppBundle\Form\Type\UserType">
            <tag name="form.type" alias="app_user" />
        </service>

        <service id="app.form.type.authorization_granted" class="AppBundle\Form\Type\AuthorizationGrantedType">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <tag name="form.type" alias="app_authorization_granted" />
        </service>

        <service id="app.form.type.authorization_group_collection" class="AppBundle\Form\Type\AuthorizationGrantedCollectionType">
            <tag name="form.type" alias="app_authorization_granted_collection" />
        </service>

        <service id="app.form.type.change_password" class="AppBundle\Form\Type\ChangePasswordType">
            <tag name="form.type" alias="app_change_password" />
        </service>

        <service id="app.validator.constraints.check_current_password" class="AppBundle\Validator\Constraints\CheckCurrentPasswordValidator">
            <argument type="service" id="security.password_encoder" />
            <tag name="validator.constraint_validator" alias="app_check_current_password" />
        </service>
    </services>
</container>
